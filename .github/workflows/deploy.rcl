let make_workflow = import "base.rcl";
let config = {
  name = "Deploy",
  on_push = { tags = ["v*"] },
  extra_steps = [
    {
      name = "Deploy",
      uses = "peaceiris/actions-gh-pages@v3.6.1",
      with = {
        github_token = "${{ secrets.GITHUB_TOKEN }}",
        commit_message = "${{ github.ref }}",
        publish_dir = "out",
      },
    },
  ],
};

make_workflow(config)
